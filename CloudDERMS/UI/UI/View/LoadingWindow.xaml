<Window x:Class="UI.View.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:UI.View"
        mc:Ignorable="d"
        Title="LoadingWindow" Height="100" Width="200" BorderThickness="0.8" BorderBrush="#FF0398E2" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid x:Name="Grid1" Background="#FF303030" MouseDown="DragWindow">
        <Label Margin="55,68,55,0" Foreground="#FF0398E2" FontSize="20" FontFamily="Champagne &amp; Limousines" FontWeight="Bold" FontStyle="Italic">Loading</Label>
        <fa:ImageAwesome Margin="50,0,50,25" Icon="Spinner" Foreground="#FF0398E2" Spin="True" Height="45" Width="45" />
    </Grid>
</Window>
